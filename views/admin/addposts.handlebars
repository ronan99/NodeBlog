{{#each erros}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <form action="/admin/posts/addpost" method="POST">
        <h4>Nova Postagem:</h4>
            <label for="titulo">Título:</label>
            <input type="text" name="titulo" placeholder="Escreva o titulo" class="form-control" required>
            <label for="slug">Slug:</label>
            <input type="text" name="slug" placeholder="Escreva o slug" class="form-control" required>
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" placeholder="Escreva a descrição" class="form-control" required>
            <label for="conteudo">Conteúdo:</label>
            <textarea name="conteudo" class="form-control" placeholder="Escreva o Post" required></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="" class="custom-select">

                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria Registrada.</option>
                {{/each}}

            </select>
            <button type="submit" class="btn btn-success mt-2">Nova Postagem</button>
            
        </form>

    </div>
</div>